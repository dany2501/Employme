doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='stylesheets/styles.css')
    title Epale mi piernita
  body
    header.profile-header
      img.logo(src='images/logo.png', alt='Logo')
      form.search(action='')
        input.search-input(type='text', placeholder='Buscar')
        button.search-btn
          svg.search-icon
            use(xlink:href='images/sprite.svg#icon-search')
      nav.header-navigation
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-comments', x='', y='')
          span.header-navigation-notification
            | 9
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-sign-in', x='', y='')
    .container
      nav.sidebar
        ul.sidebar-navigation
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-user', x='', y='')
              span.sidebar-navigation-description Perfil
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-heart', x='', y='')
              span.sidebar-navigation-description Interesados
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-bookmark', x='', y='')
              span.sidebar-navigation-description Especialidad
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='')
              svg.sidebar-navigation-icon
                use(xlink:href='img/sprite.svg#icon-sign-in', x='', y='')
              span.sidebar-navigation-description Salir
      main.portfolio
        .portfolio-information
          .information-photo-container
            .information-photo-pick
              svg.information-photo-icon
                use(xlink:href='img/sprite.svg#icon-camera')
            img.information-photo(src='images/user-photo.jpg', alt='')
          .information-data
            .information-data-field Nombre
            .information-data-field Email
            .information-data-field Fecha de Nacimiento
            .information-data-field Sexo
            .information-data-field Telefono
            .information-data-field Carrera
        .portfolio-curriculum
          .flex-col-1-of-2--row
            .curriculum-container
              .curriculum
                .curriculum-required
                  a.curriculum-required-link(href='#')
                    svg.curriculum-required-icon
                      use(xlink:href='img/sprite.svg#icon-plus-square', x='', y='')
                    span.curriculum-required-link-text Agregar curriculum
          .flex-col-1-of-2--col
            .video
              .curriculum-required
                a.curriculum-required-link(href='')
                  svg.curriculum-required-icon
                    use(xlink:href='img/sprite.svg#icon-plus-square', x='', y='')
                  span.curriculum-required-link-text Agregar video
            .comments
              textarea.comments-area(name='', id='', cols='30', rows='10', placeholder='Ingrese comentarios extras aqui')

doctype html
html(lang='en')
  head
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(type='text/javascript', src='javascripts/validaciones.js')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='stylesheets/styles.css')
    script(src='javascripts/viewEmp.js')
    title Employ.me
  body
    
    #modal-youtube.modal-background
      .modal
        svg.modal-exit.card-exit--employee
          use(xlink:href='images/sprite.svg#icon-close')
        svg.modal-youtube-icon
          use(xlink:href='images/sprite.svg#icon-youtube-play')
    header.profile-header
      img.logo(src='images/logo.png', alt='Logo')
      form.search(action='')
        input.search-input(type='text', placeholder='Buscar')
        button.search-btn
          svg.search-icon
            use(xlink:href='images/sprite.svg#icon-search')
      nav.header-navigation
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-comments')
          span.header-navigation-notification
            | 
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-sign-in')
    .container
    
      nav.sidebar
        ul.sidebar-navigation
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/perfilasp')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-user')
              span.sidebar-navigation-description Perfil
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/asp-interested')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-heart')
              span.sidebar-navigation-description Interesados
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/asp-cv')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-address-card')
              span.sidebar-navigation-description Curriculum
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/especialidad')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-bookmark')
              span.sidebar-navigation-description Especialidad
              input#id(type="text",style="display:none",value=""+id)
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/cerrarsesion')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-sign-in')
              span.sidebar-navigation-description Salir
      main.portfolio
        .portfolio-information-users
          .information-photo-container
            img.information-photo
          h1.user-name
            | #{nombre}
          .information-map  
          
        .specialty-container
          .specialty-information
          .specialty-information
          .specialty-information
        .specialty-container
          .specialty-information
          .specialty-information
          .specialty-information  
        .portfolio-curriculum
          .flex-col-1-of-2--row
            #enterprise-text.enterprise-text 
               .info
                  h1
                   center Acerca de nosotros como empresa.     
                   textarea#des.form-textarea(maxlength="1000", placeholder=''+des)
                  
          .flex-col-1-of-2--col
            div
              .enterprise-info
                .info
                  h1
                   center Contacto.
                .information-data-field
                  svg.information-data-icon
                    use(xlink:href='images/sprite.svg#icon-mobile')
                  span Telefóno #{num}
                .information-data-field
                  svg.information-data-icon
                    use(xlink:href='images/sprite.svg#icon-envelope')
                  span Email: #{em} 
                .information-data-field
                  svg.information-data-icon
                    use(xlink:href='images/sprite.svg#icon-envelope')
                  span Dirección: #{ubi}
                .information-data-field
                  svg.information-data-icon
                    use(xlink:href='images/sprite.svg#icon-envelope')
                  span Página web: #{site}
            
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='stylesheets/styles.css')
    script#www-widgetapi-script(type='text/javascript', src='https://s.ytimg.com/yts/jsbin/www-widgetapi-vflY6gPjD/www-widgetapi.js', async='')
    script(src='https://www.youtube.com/iframe_api')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='javascripts/perfilasp.js')
    script(src='javascripts/modificar.js')
    script(src='javascripts/validaciones.js')
    title Employ.me
  body
    header.profile-header
      img.logo(src='images/logo.png', alt='Logo')
      form.search(action='')
        input.search-input(type='text', placeholder='Buscar')
        button.search-btn
          svg.search-icon
            use(xlink:href='images/sprite.svg#icon-search')
      nav.header-navigation
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-comments')
          span.header-navigation-notification 9
        .header-navigation-icon-box
          svg.header-navigation-icon
            use(xlink:href='images/sprite.svg#icon-sign-in')
    .container
      nav.sidebar
        ul.sidebar-navigation
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/perfilasp')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-user')
              span.sidebar-navigation-description Perfil
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/asp-interested')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-heart')
              span.sidebar-navigation-description Interesados
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/asp-cv')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-address-card')
              span.sidebar-navigation-description Curriculum
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/especialidad')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-bookmark')
              span.sidebar-navigation-description Especialidad
          li.sidebar-navigation-item
            a.sidebar-navigation-link(href='/cerrarsesion')
              svg.sidebar-navigation-icon
                use(xlink:href='images/sprite.svg#icon-sign-in')
              span.sidebar-navigation-description Salir
      main.portfolio
        .portfolio-information-users
          .information-photo-container
            form#picture.information-photo-pick(action='/fotoasp', method='post',enctype="multipart/form-data")
              input#file.information-photo-select-hidden(type='file', name='file', value='Seleccionar foto')
              label(for='file')
                svg#camara.information-photo-icon
                  use(xlink:href='images/sprite.svg#icon-camera')
            img.information-photo
          h1.user-name #{nombre}
          #modal1.modal.modal-edit
            h3.modal-heading
              svg.information-data-icon
                use(xlink:href='images/sprite.svg#icon-pencil ')
              |  Editar Informacion
            .modal-information
              hr
              .edit-info-block-
                span.edit-info-span Correo Electronico:
                input#correo.edit-info-input(type='text', required='required', placeholder='undefined', onkeypress='return soloCorreo(event)')
                span.edit-info-span Contraseña:
                input#contra.edit-info-input(type='text', required='required', onkeypress='return soloCorreo(event)')
                span.edit-info-span Confirmar contraseña:
                input#contrac.edit-info-input(type='text', required='required', onkeypress='return soloCorreo(event)')
                span.edit-info-span Telefono:
                input#numero.edit-info-input(type='text', placeholder='undefined', onkeypress='return soloNum(event)', maxlength='10')
            .modal-btn-container
              a#guardar.btn-blue.btn Guardar
              a#cerrar.btn-blue.btn Cerrar
          #modal-github.modal-background
            .modal.modal-github
              svg.card-exit.card-exit--employee
                use(xlink:href='images/sprite.svg#icon-close ')
              svg.modal-github-icon
                use(xlink:href='images/sprite.svg#icon-github')
              form.github-form(action='')
                input.form-input.form-input-dark(type='text', placeholder='Usuario de Github')
                a.btn.form-btn.form-btn-dark Enlazar
          #modal2.modal.modal-edit
            h3.modal-heading
              svg.information-data-icon
                use(xlink:href='images/sprite.svg#icon-pencil ')
              |  Añadir Respositorios
            .modal-information
              hr
              .edit-info-block-
                span.edit-info-span Usuario de Github:
                input#usuario.edit-info-input(type='text')
            .modal-btn-container
              a#guardar2.btn-blue.btn Guardar
              a#cerrar2.btn-blue.btn Cerrar
          #modal3.modal.modal-edit
            h3.modal-heading
              svg.information-data-icon
                use(xlink:href='images/sprite.svg#icon-pencil ')
              |  Añadir Video Presentación
            .modal-information
              hr
              .edit-info-block-
                span.edit-info-span Link del vídeo:
                input#vid.edit-info-input(type='text')
            .modal-btn-container
              a#guardar3.btn-blue.btn Guardar
              a#cerrar3.btn-blue.btn Cerrar
        .portfolio-information-self
          .information-data-field
            svg.information-data-icon
              use(xlink:href='images/sprite.svg#icon-mobile')
            span #{num}
          .information-data-field
            svg.information-data-icon
              use(xlink:href='images/sprite.svg#icon-envelope')
            span#correo #{email}
          .information-data-field
            svg.information-data-icon
              use(xlink:href='images/sprite.svg#icon-birthday-cake')
            span #{fn}
          .information-data-field
            svg.information-data-icon
              use(xlink:href='images/sprite.svg#icon-male')
            span Sexo: #{sex}
          a.information-edit-btn
            svg.information-data-icon
              use(xlink:href='images/sprite.svg#icon-pencil ')
            span#link Editar
        .specialty-container
          .specialty-information
          .specialty-information
          .specialty-information
        .portfolio-curriculum
          .flex-col-1-of-2--row
            #cv.curriculum
              a.curriculum-required
              form#pdfForm(action='curriculum', method='post' enctype="multipart/form-data")
                a.curriculum-required
                  input#pdf.information-photo-select-hidden(type='file', name='pdf', value='Seleccionar Curriculum')
                  label(for='pdf')
                    svg.curriculum-required-icon
                      use(xlink:href='images/sprite.svg#icon-address-card ')
                    span.curriculum-required-link Subir Curriculum.
          .flex-col-1-of-2--col
            h1 Proyectos desarrollados por mí.
            #github.github
              a#git.curriculum-required
                svg.curriculum-required-icon
                  use(xlink:href='images/sprite.svg#icon-github-square')
                span.curriculum-required-link Vincular cuenta de Github
            a#editGit.btn.btn-blue Modificar usuario de GitHub. 
            br
            h1 Video muestra.
            #video
              .github
                a#yt.curriculum-required
                  svg.curriculum-required-icon
                    use(xlink:href='images/sprite.svg#icon-youtube')
                  span.curriculum-required-link Agregar vídeo.
            br
            a#editYT.btn.btn-blue Modificar link del video.      
